{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "현재파일 빌드하기",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Clang으로 현재 파일을 빌드합니다."
        }
    ]
}